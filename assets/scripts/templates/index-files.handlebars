{{#each files as |file|}}
<div class="panel-group accordion" id="container-{{file.id}}">
    <div class="panel panel-default ">
        <div class="panel-heading">
          File Name: &nbsp;
            <h1 class="panel-title">
                <a data-toggle="collapse"  href="#panel-{{file.id}}" id="name-{{file.id}}">{{file.file_name}}<span class="caret"></span></a>
            </h1>
                <span class="accordian-head-btns">
                  <a class="view-btn" href="{{file.url}}" target="_blank">View</a>
                  <a class="download-btn" href="{{file.url}}" download>Download</a>
                </span>
            <p data-type="{{file.file_type}}">File Type: &nbsp;&nbsp;<b>{{file.file_type}}</b></p>
        </div>
        <div id="panel-{{file.id}}" class="panel-collapse collapse">
            <div class="panel-body">
              <p data-size="{{file.file_size}}"><h4>File Size (Bytes): </h4> {{file.file_size}} </p>
              <p data-tags="{{file.tags}}"><h4>File Tags: </h4> {{file.tags}} </p>
              <p data-url="{{file.url}}"><h4>File URL: </h4> {{file.url}} </p>
              <p data-createdAt="{{file.createdAt}}"><h4>File Stored: </h4>{{file.createdAt}} </p>
              <p data-updatedAt="{{file.updatedAt}}"><h4>File Modified: </h4><span id="update-time-{{file.id}}">{{file.updatedAt}}</span> </p>
              <p><h4>Change Name: </h4><input type="text" name="file[name]" placeholder="New Name Here" id="{{file.id}}">
                <button type="button" class="btn btn-default update-file-btn" data-file-id="{{file.id}}"> Update </button>
              </p>
              <button type="button" class="btn btn-default remove-file-btn" data-file-id="{{file.id}}"> Remove </button>
            </div>
        </div>
    </div>
</div>
{{/each}}
